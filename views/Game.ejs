<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Game Suwit</title>

    <script src="js/game.js" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.6.0/dist/umd/popper.min.js" integrity="sha384-KsvD1yqQ1/1+IA7gi3P0tyJcT3vR+NdBTt13hSJ2lnve8agRGXTTyNaBYmCR/Nwi" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link href="css/style_game.css" rel="stylesheet" type="text/css">
</head>

<body>
    <!--TOP NAVIGATION-->
    <div class="navigation">
       <a href="/">
        <img class="nav__content" src="CSS/asset/_.png" alt="">
        </a> 

        <img class="nav__content" src="CSS/asset/logo1.png" alt="">
        
        <p class="nav__content">ROCK PAPER SCISSORS</p>
    </div>

    <!--AREA BERMAIN-->
     <div class="container-fluid">
        <div class="row row_style">

            <div class="col-2"></div>
            
            <!--AREA PLAYER-->
            <div class="col-3 player">
                <p class="item">PLAYER</p>
            
                <img id="plbatu" class="item" src="CSS/asset/batu1.png" alt="">
        
                <img id="plkertas" class="item" src="CSS/asset/kertas 1.png" alt="">
            
                <img id="plgunting" class="item" src="CSS/asset/gunting 1.png" alt="">                        
               
            </div>

            <!--INFO-->
            <div class="col-2">
                    
                <div class="parent">
                <div class="space"></div>
                <p id="versus" class="info vs_bef">VS</p>
                <p id="info_menang" class="info info_bef">PLAYER 1 WIN</p>
                <P id="info_kalah" class="info info_bef">COM WIN</P>
                <P id="info_seri" class="info info_bef">DRAW</P>
                </div>

                <img id="reset" src="CSS/asset/refresh 2.png" alt="">
            
            </div>

            <!--AREA KOMPUTER-->
            <div class="col-3 comp">
                <p class="item">COM</p>
                
                    <img id="cobatu" class="item" src="CSS/asset/batu1.png" alt="">
                
                    <img id="cokertas" class="item" src="CSS/asset/kertas 1.png" alt="">
                
                    <img id="cogunting" class="item" src="CSS/asset/gunting 1.png" alt="">
                
            </div>

            <div class="col-2"></div>

        </div>
    </div>
    
</body>
</html>